<Window x:Class="FileExplorer.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:FileExplorer"
		mc:Ignorable="d"
		xmlns:prop="clr-namespace:FileExplorer.Properties"
		Closing="Window_Closing"
        SizeToContent="WidthAndHeight"
		Title="{x:Static prop:Resources.fileExplorer}">
    <Grid Background="#FF989898">
        <Canvas Background="#FFFFDFDF" Width="380" Height="626" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,742,0">
            <TextBox x:Name="dirDisplay" IsReadOnly="True" Text="{Binding parseDir}" TextChanged="dirDisplay_TextChanged" Canvas.Left="11" Canvas.Top="414" HorizontalAlignment="Left" VerticalAlignment="Center" Width="289" />
            <Button x:Name="btnBuscar" Content="Buscar" Height="24" Click="SearchButton_Click" FontSize="9" Canvas.Left="266" Canvas.Top="12" HorizontalAlignment="Left" VerticalAlignment="Center" Width="33"/>
            <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Width="250" Height="26" Canvas.Left="11" Canvas.Top="11"/>
            <StackPanel  x:Name="parseMsg" Grid.ZIndex="2" Orientation="Horizontal" Height="29" Canvas.Left="17" Width="145" Canvas.Top="49">
                <Image  Source="loading.png" VerticalAlignment="Top"/>
                <Label  Content="{x:Static prop:Resources.parsingDirectory}" />
            </StackPanel>
            <TreeView x:Name="fileDisplay" PreviewMouseRightButtonDown="viewTree_PreviewMouseRightClickDown" SelectedItemChanged="viewTree_SelectedItemChanged" HorizontalAlignment="Center" Width="288" Height="361" VerticalAlignment="Top" Grid.RowSpan="2" Canvas.Left="11" Canvas.Top="44">
                <TreeView.Resources>
                    <ContextMenu x:Key="TreeViewContextMenu" x:Name="TreeViewContextMenu">
                        <MenuItem Header="Open" Click="MenuItem_Click"></MenuItem>
                    </ContextMenu>
                </TreeView.Resources>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type local:Node}" ItemsSource="{Binding children}">
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox Click="chk_clicked" IsChecked="{Binding isChecked}" />
                            <Image Source="{Binding iconLoc}" Width="18" />
                            <Label Content="{Binding name}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Canvas>

    </Grid>
</Window>
