<Window
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:FileExplorer"
		xmlns:prop="clr-namespace:FileExplorer.Properties"
        xmlns:helix="http://helix-toolkit.org/wpf"
        x:Class="FileExplorer.MainWindow"
		mc:Ignorable="d"
		Closing="Window_Closing"
		Title="EMPRESA" BorderThickness="0.5,0.5,0.5,0.5" Width="934" Height="550" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF1EFEF" Height="NaN" Margin="0,0,0,-45" Width="NaN">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="562*"/>
            <ColumnDefinition Width="196*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="HamburgerButton" Click="HamburgerButton_Click"
                Margin="0,3,10,0" Width="46" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="4" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Source="user_icon.png" Height="36" Width="45" StretchDirection="DownOnly"/>
        </Button>
        <!-- Menu items -->
        <StackPanel x:Name="MenuItemsPanel"
                    Visibility="Hidden" Margin="161,48,0,0" Background="White" Grid.Column="4" VerticalAlignment="Top" Width="NaN">
            <Button Click="MenuClick" Content="Menu" Margin="5"/>
            <Button Click="LogOut" Content="Cerrar sesión"/>
            <Button Click="ExitClick" Content="Salir" Margin="5"/>
        </StackPanel>
        <Canvas Width="380" HorizontalAlignment="Left" Grid.ColumnSpan="4" Height="NaN" Margin="0,48,0,0">
            <TextBox x:Name="dirDisplay" IsReadOnly="True" Text="{Binding parseDir}" TextChanged="dirDisplay_TextChanged" Canvas.Top="415" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1" RenderTransformOrigin="0.5,0.5" >
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <Button x:Name="btnBuscar" Content="Buscar" Height="26" Click="SearchButton_Click" FontSize="9" Canvas.Left="328" Canvas.Top="12" HorizontalAlignment="Center" VerticalAlignment="Top" Width="34"/>
            <TextBox x:Name="txtSearch"  HorizontalAlignment="Left" Width="312" Height="26" Canvas.Left="11" Canvas.Top="12" VerticalAlignment="Center" ToolTip="Buscar" Cursor="Help"/>
            <StackPanel  x:Name="parseMsg" Panel.ZIndex="2" Orientation="Horizontal" Height="29" Canvas.Left="17" Width="145" Canvas.Top="49">
                <Image  Source="loading.png" VerticalAlignment="Top"/>
                <Label  Content="{x:Static prop:Resources.parsingDirectory}" />
            </StackPanel>
            <TreeView x:Name="fileDisplay" PreviewMouseRightButtonDown="viewTree_PreviewMouseRightClickDown" SelectedItemChanged="viewTree_SelectedItemChanged" HorizontalAlignment="Left" Width="351" Height="361" VerticalAlignment="Center" Grid.RowSpan="2" Canvas.Left="11" Canvas.Top="44">
                <TreeView.Resources>
                    <ContextMenu x:Key="TreeViewContextMenu" x:Name="TreeViewContextMenu">
                        <MenuItem Header="Open" Click="MenuItem_Click"/>
                    </ContextMenu>
                </TreeView.Resources>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type local:Node}" ItemsSource="{Binding children}">
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox Click="chk_clicked" IsChecked="{Binding isChecked}" />
                            <Image Source="{Binding iconLoc}" Width="18" />
                            <Label Content="{Binding name}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <DockPanel Canvas.Left="260" Canvas.Top="171" HorizontalAlignment="Left" VerticalAlignment="Center" Width="260" Height="52" RenderTransformOrigin="0.5,0.5">
                <DockPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </DockPanel.RenderTransform>
                <ToolBar Height="36" Width="167" Background="#FFEDD94E">
                    <Button Click="Button_Click_1">
                        <Image Source="mail_icon.png" Width="18" Height="18" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                    <Separator></Separator>
                    <Button Click="Open_Click">
                        <Image Source="eye_ico.png" Width="18" Height="18" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                    <Separator></Separator>
                    <Button Click="Save_Click">
                        <Image Source="lupa_icon.png" Width="18" Height="18" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                    <Separator></Separator>
                    <Button Click="folder_click">
                        <Image Source="folder_icon.png" Width="18" Height="18" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                    <Separator></Separator>
                    <Button Click="reloadTreeView_click">
                        <Image Source="refresh.png" Width="18" Height="18" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                </ToolBar>
                <!-- Rest of your window content -->
            </DockPanel>
        </Canvas>
        <Canvas x:Name="canvav" Background="White" Height="360" Width="330" Grid.Column="3" Grid.ColumnSpan="2" Margin="500,88,31,105">
            <Grid x:Name="grid3d" Height="359" Width="330" Background="#FFFDFDFD" Grid.Column="3">
                <helix:HelixViewport3D x:Name="viewPort3d" ZoomExtentsWhenLoaded="False" Height="339" Margin="10,0,0,0" Width="310" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center" IsHeadLightEnabled="True" >
                    <helix:HelixViewport3D.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </helix:HelixViewport3D.RenderTransform>
                    <!-- Remember to add light to the scene -->
                    <helix:DefaultLights/>
                </helix:HelixViewport3D>
            </Grid>
        </Canvas>
    </Grid>

</Window>
