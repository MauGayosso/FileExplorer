<Window x:Class="FileExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorer"
        mc:Ignorable="d"
        xmlns:prop="clr-namespace:FileExplorer.Properties"
        Closing="Window_Closing"
        MinHeight="300"
        MinWidth="590"
        Title="{x:Static prop:Resources.fileExplorer}" Height="700" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"/>
    </Window.Resources>

    <DockPanel>
        <Grid DockPanel.Dock="Top" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="dirDisplay" IsReadOnly="True" Text="{Binding parseDir}" TextChanged="dirDisplay_TextChanged" Margin="19,597,372,-587" />
            <Button x:Name="btnBuscar" Content="Buscar" Margin="433,0,0,0" Height="22" Click="SearchButton_Click" FontSize="9" HorizontalAlignment="Left"/>
            <TextBox x:Name="txtSearch" Margin="19,4,372,5" />
        </Grid>

        <Grid>
            <Grid Grid.ZIndex="1" Margin="10,0,-10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="265" Width="96*"/>
                    <ColumnDefinition Width="267*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition MinWidth="190" Width="190*"/>
                    <ColumnDefinition MinWidth="150" Width="242*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Style="{StaticResource panelMsg}" x:Name="parseMsg" Grid.ZIndex="2" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="10,0,5,0">
                    <Image Style="{StaticResource statusIcon}" Source="loading.png" VerticalAlignment="Top"/>
                    <Label Style="{StaticResource statusMsg}" Content="{x:Static prop:Resources.parsingDirectory}" />
                </StackPanel>
                <TreeView x:Name="fileDisplay" Grid.RowSpan="4" PreviewMouseRightButtonDown="viewTree_PreviewMouseRightClickDown" SelectedItemChanged="viewTree_SelectedItemChanged" Margin="5,0,5,10" Grid.ColumnSpan="2">
                    <TreeView.Resources>
                        <ContextMenu x:Key="TreeViewContextMenu" x:Name="TreeViewContextMenu">
                            <MenuItem Header="Open" Click="MenuItem_Click"></MenuItem>
                        </ContextMenu>
                    </TreeView.Resources>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type local:Node}" ItemsSource="{Binding children}">
                            <StackPanel Orientation="Horizontal" >
                                <CheckBox Click="chk_clicked" IsChecked="{Binding isChecked}" />
                                <Image Source="{Binding iconLoc}" Width="18" />
                                <Label Content="{Binding name}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

                <GridSplitter Grid.Column="2" Width="5" HorizontalAlignment="Stretch" Grid.RowSpan="5"/>

                <Label Grid.Column="3" Grid.Row="4" Content="PATH" Style="{StaticResource lbl}" HorizontalAlignment="Left" Margin="152,0,0,0"/>
                <Label Grid.Column="4" Grid.Row="4" Style="{StaticResource resultLbl}"
                   Content="{Binding sizeInBytes}"/>
                <ToolBar Margin="-10,92,40,10" Grid.Row="4" Grid.ColumnSpan="2">
                    <Button ToolTip="Enviar correo de confirmación" Click="Button_Click_1">
                        <Image Source="mail.png" VerticalAlignment="Top" Height="15"></Image>
                    </Button>
                </ToolBar>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
