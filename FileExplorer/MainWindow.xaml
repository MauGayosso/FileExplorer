<Window
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:FileExplorer"
		xmlns:prop="clr-namespace:FileExplorer.Properties"
        xmlns:helix="http://helix-toolkit.org/wpf"
        x:Class="FileExplorer.MainWindow"
		Closing="Window_Closing"
		Title="EMPRESA" Width="1368" Height="768" WindowState="Maximized">

    <Grid Background="#FFF1EFEF" Height="NaN" Margin="-1,0,1,-131" Width="NaN">
        <Grid.RowDefinitions>
            <RowDefinition Height="294*"/>
            <RowDefinition Height="589*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="685*"/>
            <ColumnDefinition Width="Auto" MinWidth="207.81"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="HamburgerButton" Click="HamburgerButton_Click"
                Margin="0,3,10,0" Width="46" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="5" Background="{x:Null}" BorderBrush="{x:Null}" Height="40">
            <Image Source="user_icon.png" Height="36" Width="45" StretchDirection="DownOnly"/>
        </Button>
        <!-- Menu items -->
        <StackPanel x:Name="MenuItemsPanel"
                    Visibility="Hidden" Margin="79,10,56,0" Background="White" Grid.Column="5" Width="NaN" VerticalAlignment="Top" Height="80">
            <Button Click="MenuClick" Content="Menu" Margin="5"/>
            <Button Click="LogOut" Content="Cerrar sesión"/>
            <Button Click="ExitClick" Content="Salir" Margin="5"/>
        </StackPanel>
        <Canvas Width="430" HorizontalAlignment="Left" Grid.ColumnSpan="5" Height="NaN" Margin="0,48,0,0" Grid.RowSpan="2">
            <TextBox x:Name="dirDisplay" IsReadOnly="False" Text="{Binding parseDir}" TextChanged="dirDisplay_TextChanged" Canvas.Top="387" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1" RenderTransformOrigin="0.5,0.5" Canvas.Left="5" >
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <Button x:Name="btnBuscar" Content="Buscar" Height="26" Click="SearchButton_Click" FontSize="9" Canvas.Left="328" Canvas.Top="12" HorizontalAlignment="Center" VerticalAlignment="Top" Width="34"/>
            <TextBox x:Name="txtSearch"  HorizontalAlignment="Left" Width="312" Height="26" Canvas.Left="10" Canvas.Top="12" VerticalAlignment="Center" ToolTip="Buscar" Cursor="Help"/>
            <StackPanel  x:Name="parseMsg" Panel.ZIndex="2" Orientation="Horizontal" Height="29" Canvas.Left="30" Width="145" Canvas.Top="96">
                <Image  Source="lifttruck.png" VerticalAlignment="Top"/>
                <Label  Content="{x:Static prop:Resources.parsingDirectory}" />
            </StackPanel>
            <TreeView x:Name="fileDisplay" MouseDoubleClick="viewTree_PreviewMouseRightClickDown" SelectedItemChanged="viewTree_SelectedItemChanged" HorizontalAlignment="Left" Width="410" Height="335" VerticalAlignment="Top" Grid.RowSpan="2" Canvas.Left="11" Canvas.Top="96">
                <TreeView.Resources>
                    <ContextMenu x:Key="TreeViewContextMenu" x:Name="TreeViewContextMenu">
                        <MenuItem Header="Open" Click="MenuItem_Click"/>
                    </ContextMenu>
                </TreeView.Resources>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type local:Node}" ItemsSource="{Binding children}">
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox Click="chk_clicked" IsChecked="{Binding isChecked}" />
                            <Image Source="{Binding iconLoc}" Width="18" />
                            <Label Content="{Binding name}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <DockPanel Canvas.Left="304" Canvas.Top="182" HorizontalAlignment="Left" VerticalAlignment="Top" Width="302" Height="72" RenderTransformOrigin="0.5,0.5">
                <DockPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </DockPanel.RenderTransform>
                <ToolBar Height="60" Width="201" Background="#FFEDD94E">
                    <Button Click="Button_Click_1" Height="34" Width="31">
                        <Image Source="mail_icon.png" Width="18" Height="18" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                    <Separator></Separator>
                    <Button Click="Open_Click">
                        <Image Source="eye_ico.png" Width="28" Height="30" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                    <Separator></Separator>
                    <Button Click="SaveInfoFile_Click" Height="34" Width="31">
                        <Image Source="info2.png" Width="25" Height="25" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                    <Separator></Separator>
                    <Button Click="folder_click" Height="31" Width="29">
                        <Image Source="folder_icon.png" Width="21" Height="21" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                    <Separator></Separator>
                    <Button Click="reloadTreeView_click" Height="34" Width="31">
                        <Image Source="refresh.png" Width="25" Height="23" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                </ToolBar>
                <!-- Rest of your window content -->
            </DockPanel>
            <TreeView x:Name="twSearched" Height="35" Width="352" Canvas.Top="43" Canvas.Left="10" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TreeView.ContextMenu><ContextMenu x:Name="ctxMenu" IsEnabled="True">
                        <MenuItem Header="Preview" Click="MenuItem_Click_1" IsEnabled="True">
                            <MenuItem.Icon>
                                <Image Source="eye_ico.png"></Image>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Open Folder" Click="MenuItem_Click_2" IsEnabled="True">
                            <MenuItem.Icon>
                                <Image Source="mail.png"></Image>
                            </MenuItem.Icon>
                        </MenuItem>

                    </ContextMenu></TreeView.ContextMenu>
            </TreeView>
            <ListView x:Name="listAtts" Height="82" Width="414" Canvas.Left="10" Canvas.Top="444" HorizontalAlignment="Center" VerticalAlignment="Top" SelectionMode="Single">
            </ListView>
            <ListView x:Name="listFilesNode" Height="87" Width="414" Canvas.Left="10" Canvas.Top="549" HorizontalAlignment="Center" VerticalAlignment="Top" SelectionMode="Single">
            </ListView>
        </Canvas>
        <Canvas x:Name="canvav" Background="BlueViolet" Grid.Column="4" Grid.ColumnSpan="2" Margin="472,90,33,220" Grid.RowSpan="2">
            <Grid x:Name="grid3d" Height="567" Width="793" Background="Pink" Grid.Column="3" Canvas.Top="-5" HorizontalAlignment="Left" VerticalAlignment="Top">
                <helix:HelixViewport3D x:Name="viewPort3d" ZoomExtentsWhenLoaded="False" Width="803" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" IsHeadLightEnabled="True" Height="557" VerticalAlignment="Bottom" >
                    <helix:HelixViewport3D.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </helix:HelixViewport3D.RenderTransform>
                    <!-- Remember to add light to the scene -->
                    <helix:DefaultLights/>
                </helix:HelixViewport3D>
                <Image x:Name="previewImage" Margin="4,0,-410,-220" />
                <TextBlock x:Name="txtTextBox" TextWrapping="Wrap" Height="410" Width="632" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Margin="51,94,0,0">
                </TextBlock>
                <WebBrowser x:Name="wb" Margin="0,0,-10,-12"/>
            </Grid>
        </Canvas>
    </Grid>
</Window>